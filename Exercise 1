class Book():
    
    def __init__(self, title, author, yearOfPublication):
        self.title=title
        self.author=author
        self.yearOfPublication = yearOfPublication

    def showDetails(self):
        print ("Title:\t", self.title)
        print ("Author:\t", self.author)
        print ("Year Of Publication:\t", self.yearOfPublication)
        
    def getTitle(self):
        return self.title
    
    def getAuthor(self):
        return self.author
    
    def getYear(self):
        return self.yearOfPublication

from Book import*

b1= Book("Harry Potter and the Philosopher's stone", "J.K. Rowling", 1997)
b2= Book("Harry Potter and the Chamber of Secret", "J.K. Rowling", 1998)
b3= Book("Harry Potter and the Prisoner of Azkaban", "J.K. Rowling", 1999)
b4= Book("Harry Potter and the Goblet of Fire", "J.K. Rowling", 2000)
b5= Book("Harry Potter and the Order of Phoenix", "J.K. Rowling", 2003)
b6= Book("Harry Potter and the Half Blood Prince", "J.K. Rowling", 2005)
b7= Book("Harry Potter and the Deathly Hollow", "J.K. Rowling", 2007)

book = [b1, b2, b3, b4, b5, b6, b7]
for b in book:
        print()
        b.showDetails()
